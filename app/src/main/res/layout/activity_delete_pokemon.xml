<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/surface"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_delete"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/pokemon_secondary"
        app:title="Eliminar Pokémon"
        app:titleTextColor="@color/text_on_dark" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvDeleteInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Toca un Pokémon para eliminarlo. Mantén presionado para ver detalles."
            android:textColor="@color/text_on_light"
            android:textSize="14sp"
            android:padding="8dp"
            android:background="@color/surface_variant"
            android:layout_marginBottom="8dp" />

        <ListView
            android:id="@+id/listViewEliminar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@color/surface_variant"
            android:dividerHeight="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnEliminarSeleccionados"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/button_primary_selector"
                style="@style/Button.Primary"
                android:text="Eliminar seleccionado" />

            <View
                android:layout_width="12dp"
                android:layout_height="0dp" />

            <Button
                android:id="@+id/btnCancelarEliminar"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/button_secondary_selector"
                style="@style/Button.Secondary"
                android:text="@string/cancelar"
                android:onClick="cancelarAccion" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvEmptyDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No hay Pokemones guardados"
            android:textColor="@color/text_on_light"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
